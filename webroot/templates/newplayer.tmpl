{{define "content"}}
<div class="col-md-4">
<form method="POST">
    <div class="form-group">
        <label>New player name:</label>
        <input name="name" type="text" class="form-control" placeholder="Player name"></input>
    </div>
    <div class="form-group">
        <label>Select your aliases:</label>
    {{range .Aliases}}
    {{template "checkbox-alias" .}}
         {{end}}
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
{{end}}

{{define "checkbox-alias"}}
<div class="checkbox">
    <label>
        <input name="aliases" type="checkbox" value="{{.Alias}}">{{.Alias}}
    </label>
</div>
{{end}}
