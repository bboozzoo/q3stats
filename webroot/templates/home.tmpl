{{define "content"}}
<div class="container">
    <h3>General Stats</h3>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">Matches:</div>
        <div class="col-md-1">{{.Global.Matches}}</div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">Frags:</div>
        <div class="col-md-1">{{.Global.Frags}}</div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">Suicides:</div>
        <div class="col-md-1">{{.Global.Suicides}}</div>
    </div>

</div>
<div class="container">
    <h3>Recent Matches</h3><a href="matches">See All</a>
    {{template "matchlist" .RecentMatches}}
</div>
{{end}}
