{{define "content"}}
<h3>{{.Name}}</h3>

{{with .PlayerGlobalStats}}
<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">Matches:</div>
        <div class="col-md-1">{{.Matches}}</div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">Kills:</div>
        <div class="col-md-1">{{.Kills}}</div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">Deaths:</div>
        <div class="col-md-1">{{.Deaths}}</div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">Suicides:</div>
        <div class="col-md-1">{{.Suicides}}</div>
    </div>
</div>

<div class="container col-md-4">
    <h4>Personal Stats</h4>
    {{template "playerstats" .}}
</div>
{{end}}

{{end}}

{{define "playerstats"}}
<table class="table">
    <thead>
        <tr>
            <th>Weapon</th>
            <th>Shots</th>
            <th>Kills</th>
            <th>Accuracy</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
{{end}}
